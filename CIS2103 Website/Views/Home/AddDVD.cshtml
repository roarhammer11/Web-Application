@{
    ViewData["Title"] = "Add DVD";
    Layout = "_DashboardLayout";
}

<div class="container-fluid add-dvd-container">
    <form id="add-dvd-form">
        <div class="w-50">
            <h4>DVD Name</h4>
            <input type="text" class="form-control form-control-lg" name="DVDName" id="DVDName" required />
            <h4>Quantity</h4>
            <input type="number" class="form-control form-control-lg" name="Quantity" id="Quantity" required />
            <h4>Category</h4>
            <div class="d-flex flex-column flex-wrap justify-content-between" id="category-div">
                <div>
                    <input type="checkbox" id="Action" name="Action" value="Action">
                    <label for="Action"> Action</label>
                </div>
                <div><input type="checkbox" id="Adult" name="Adult" value="Adult">
                <label for="Adult"> Adult</label></div>
                <div>
                    <input type="checkbox" id="Adventure" name="Adventure" value="Adventure">
                    <label for="Adventure"> Adventure</label>
                </div>
                <div>
                    <input type="checkbox" id="Animation" name="Animation" value="Animation">
                    <label for="Animation"> Animation</label>
                </div>
                <div>
                    <input type="checkbox" id="Biography" name="Biography" value="Biography">
                    <label for="Biography"> Biography</label>
                </div>
                <div>
                    <input type="checkbox" id="Comedy" name="Comedy" value="Comedy">
                    <label for="Comedy"> Comedy</label>
                </div>
                <div>
                    <input type="checkbox" id="Crime" name="Crime" value="Crime">
                    <label for="Crime"> Crime</label>
                </div>
                <div>
                    <input type="checkbox" id="Documentary" name="Documentary" value="Documentary">
                    <label for="Documentary"> Documentary</label>
                </div>
                <div>
                    <input type="checkbox" id="Drama" name="Drama" value="Drama">
                    <label for="Drama"> Drama</label></div>
                <div>
                    <input type="checkbox" id="Family" name="Family" value="Family">
                    <label for="Family"> Family</label>
                </div>
                <div>
                    <input type="checkbox" id="Fantasy" name="Fantasy" value="Fantasy">
                    <label for="Fantasy"> Fantasy</label>
                </div>
                <div>
                    <input type="checkbox" id="History" name="History" value="History">
                    <label for="History"> History</label>
                </div>
                <div>
                    <input type="checkbox" id="Horror" name="Horror" value="Horror">
                    <label for="Horror"> Horror</label>
                </div>
                <div>
                    <input type="checkbox" id="Musical" name="Musical" value="Musical">
                    <label for="Musical"> Musical</label>
                </div>
                <div>
                    <input type="checkbox" id="Mystery" name="Mystery" value="Mystery">
                    <label for="Mystery"> Mystery</label>
                </div>
                <div>
                    <input type="checkbox" id="Sci-Fi" name="Sci-Fi" value="Sci-Fi">
                    <label for="Sci-Fi"> Sci-Fi</label>
                </div>                          
            </div>
            <h4>Description</h4>
            <input type="text" class="form-control form-control-lg" name="Description" id="Description" required />
            <h4>Rate Per Rent</h4>
            <input type="number" class="form-control form-control-lg" name="RatePerRent" id="RatePerRent" required />
            <h4>Image (Optional)</h4>
            <input type="file" id="Image" name="Image" accept="image/*" disabled>
        </div>
        <div class="d-flex justify-content-center w-50">
            <button type="submit"
                    class="btn btn-success btn-block btn-lg gradient-custom-4 text-body mt-3">
                Submit
            </button>
        </div> 
    </form>
</div>
